{% endblock %}
{% set tagline = 'Welcome' %}
{% set tagline_btn_content = 'Reload' %}
{% block header %}
    <header class="bg-aesthetic-gradient py-5 mb-5">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-lg-12">
                    <h1 class="display-4 text-white mt-5 mb-2">{{ tagline }}</h1>
                    <p class="lead mb-5 text-white">{{ tagline_content }}</p>
                    <a href="{{ path('homepage') }}">
                        <button
                            type="button"
                            class="btn btn-outline-light btn-lg">
                            {{ tagline_btn_content }}
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
